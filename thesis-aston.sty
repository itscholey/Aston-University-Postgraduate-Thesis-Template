% Required font size is 10pt, \small gives absolute point size of 10pt
\usepackage[font=small,labelfont=bf]{caption}
\usepackage[font=small]{subfig}

\usepackage{multirow}
\usepackage{floatrow}
\usepackage{amssymb}


% Commands to set up the page style and formatting -- leave as is
% Set up default page style
\pagestyle{fancy} 
\fancyhf{}
\renewcommand{\headrulewidth}{0pt}
\fancyhead[R]{\footnotesize\textit{\leftmark}}
\fancyfoot[L]{\footnotesize\textit{\pageauthor}}
\fancyfoot[R]{\thepage}

% add footer to fancy page too
\fancypagestyle{titlepage}{%
    \fancyhead{}
    \fancyfoot[L]{}
}

% Commands to set up a plain page style if needed
\fancypagestyle{plain}{%
\fancyhf{}
\renewcommand{\headrulewidth}{0pt}
\fancyhead[R]{\footnotesize\textit{\leftmark}}
\fancyfoot[L]{\footnotesize\textit{\pageauthor}}
\fancyfoot[R]{\thepage}
}

% Commands to format the abstract page
\fancypagestyle{abstractpage}{%
\fancyhf{}
\renewcommand{\headrulewidth}{0pt}
\fancyhead[C]{\footnotesize\textit{Aston University}}
\fancyfoot[R]{\thepage}
}


